<div class="container">
  <div class="card">
    <div class="container">
      <div class="wrapper row">
        <div class="preview col-md-6">
          <%= image_tag(@book.image, size: "120x500", alt: "Image" , class:"card-img-top") %>

        </div>
        <div class="details col-md-6">
          <h3 class="product-title">title: <%= @book.title %></h3>
          <div class="rating">
            <div class="stars">
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
            </div>
            <span class="review-no">41 reviews</span>
          </div>
          <p class="product-description"> category: <%= @book.category %></p>
          <p class="product-description"> published : <%= @book.book_year_published  %></p>

          <h4 class="price"> price:
            <span>$<%= @book.price %></span></h4>



          <div class="action">

            <%if !@current_cart.books.include?(book)%>
              <%# if logged_in? %>
                <!-- Add to Basket -->
                <%=button_to order_details_path(:book_id => book.id),class: "btn btn-warning  btn_x "  , params:{bookID: book.id} do %>
                 <i class="glyphicon glyphicon-plus" style="color:black;"></i>
                Add to Basket
              <% end %>
              <%# end %>
              <%else %>
              <% end %>

                <!-- See lineItem section below for explanation of line_item links -->
                <ul class="users">
                  <!-- <li> -->
                  <!-- <%#= link_to "Add one", line_item_add_path(:id => line_item), method: :post %> -->




</div>
</div>
</div>
</div>
</div>
</div>

<h3>
  Order ID
  <%= order.id %>
    User ID
  <%= order.user_id %></h3>
<p>
  <strong>Name:</strong>
  <%= User.find_by(id:order.user_id).name %>


  <strong>Email:</strong>
  <%= User.find_by(id:order.user_id).email %>

   
  <strong>Pay method:</strong>
  <%= order.pay_method %></p>
<p>
  <strong>
    Description</strong>
  <div class="well well-sm"><%= order.description %></div>
</p>
<p>
  <h3>Total price:
    <%= number_to_currency(order.sub_total) %></h3>
</p>

<div id="<%= order.id %>" class="collapse">
  <ul class="users">
    <% order.order_detail.each do |item| %>
      <%= item.quantity %>

     <% end %>
    <br/>
  </ul>
</div>

<hr/>
